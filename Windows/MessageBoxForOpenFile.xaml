<Window x:Class="StockMaster.Windows.MessageBoxForOpenFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockMaster.Windows"
        mc:Ignorable="d"
        Title="Отчет создан" Height="150" Width="300"
        Background="Black" Foreground="White">
        <StackPanel Margin="10">
            <!-- Title Text -->
            <TextBlock Text="Отчет успешно создан." 
                           TextWrapping="Wrap" Margin="0,0,0,20" FontSize="14"
                           HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Open Button -->
                <Button Name="OpenButton" Content="Открыть" Width="80" Margin="10"
                            Background="Red" Foreground="White" FontWeight="Bold"/>
                <!-- Cancel Button -->
                <Button Name="CancelButton" Content="Отмена" Width="80" Margin="10"
                            Background="DarkRed" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
</Window>
